{
  "extends": "airbnb-base",
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    // Permitir el uso de _id sin advertencias de ESLint
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],

    // Permitir el uso de console.log durante el desarrollo
    "no-console": ["warn", { "allow": ["log"] }],

    // Controlar los saltos de l√≠nea, si es necesario
    "linebreak-style": 0
  }
}